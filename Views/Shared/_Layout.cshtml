<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Developer Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">

    <meta name="author" content="Craig Kelly">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Programming Portfolio">
    <meta name="keywords" content="HTML,CSS,JavaScript">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="InfoDisplay" style="margin-left: 30%;"  asp-action="Welcome"><b>Craig Kelly</b> <p><i>Portfolio</i></p></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between id=" navbarColor01"">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  class="nav-link text-light" asp-area="" asp-controller="InfoDisplay" asp-action="Welcome"><h5><i>About</i></h5></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy"><h5><i>Privacy</i></h5></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - NewPortfolioUpdate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <div class="row" style="width:260px" border-height="1000">
                <div class="col-sm-4 text-dark" ><a class="text-dark" href="https://www.linkedin.com/in/craig-kelly-5525a5173/" target="_top"><b>LinkedIn</b></a></div>
                <div class="col-sm-4 text-dark"  width:80px"><a class="text-dark" href="/InfoDisplay/Welcome" target="top"><b>About </b></a></div>
                <div class="col-sm-4 text-dark" > <a class="text-dark" href="mailto:crkelly86@gmail.com?Subject=Hello%20I%20saw%20your%20portfolio" target="_top"><b>Contact</b></a></div>
                
                <div class="row" style="width:260px" border-height="1000">
                </div>
            </div>
            </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
