@model NewPortfolioUpdate.Models.shopModel

<h4 style="margin-left:30%">Add Product Details</h4>
<hr />
<div class="row" style="margin-left:30%">
    <div class="col-md-4">
        <form asp-action="ProcessCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input  type="submit" value="ProcessCreate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/InfoDisplay/Shop" class="btn btn-primary" style="margin-left:30%">Return To Shop</a>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}